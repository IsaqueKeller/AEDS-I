#include <iostream>
using namespace std;

void numbers () {
	int option = 0;
	cout << "Do you want to see the numbers side by side or upside down?" << endl;
	cout << "1 - side by side" << endl;
	cout << "2 - upside down" << endl;
	do {
		cin >> option;	
	} while (option != 1 and option !=2);
	switch (option) {
		case 1: 
		for (int i = 0; i <= 20; i++) {
			cout << i << ",";
		}
		break;
		case 2:
			for (int i = 0; i <= 20; i++) {
				cout << i << endl;
			}
			break;
	}
}

int main () {
	numbers();
	return 0;
}
