#include <iostream>
using namespace std;

void polution_function (float level) {
	if (level < 0.3) {
		cout << "Everything is ok" << endl;
	}
	else if (level < 0.4) {
		cout << "The industries of the first group need to suspend their activities immediately." << endl;
	}
	else if (level < 0.5) {
		cout << "The industries of the first and second group need to stop their operations, raising the actions to lower the levels of pollution." << endl;
	}
	else {
		cout << "THE SITUATION IS CRITICAL!!! STOP ALL ACTIVITIES" << endl;
	}
}

int main (){
	float a =0;
	cout << "Inform the level of pollution" << endl;
	cin >> a;
	polution_function (a);
	return 0;
}
