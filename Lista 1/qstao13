#include <iostream>
using namespace std;

void funcaogeral (int totalsegundos) { 

	int horas = totalsegundos/3600;
	int restoh = totalsegundos%3600;
	
	int minutos = restoh/60;
	int restom = restoh%60;
	
	int segundos = restom;
	
	cout << horas << " horas" << endl << minutos << " minutos" << endl << segundos << " segundos" << endl;

}

int main () {
	float a = 0;
	
	cout << "Informe o tempo em segundos" << endl;
	cin >> a;
	
	funcaogeral(a);
	return 0;
}
