#include <iostream>
using namespace std;

float sum (float number , int quantity) {
	float somatory = 0;
	int i = 0;
	do {
		cout << "Type in a number: " << endl;
	cin >> number;
	somatory = somatory+number;
	i++;
	} while (i < quantity);
	return somatory;
}

int main () {
	float number = 0;
	int quantity = 0;
	
	cout << "Type in the quantity: " << endl;
	cin >> quantity;
	
	float result = sum (number , quantity);
	
	cout << "The sum is : " << result << endl;
	
}
