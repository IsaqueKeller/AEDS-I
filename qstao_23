#include <iostream>
using namespace std;
//Faça um módulo que verifica se o valor das variáveis a E b é par.

void funcaogeral (int valor1 , int valor2) {
	if (valor1 %2 == 0 and valor2 %2 == 0) {
		cout << "A proposicao e verdadeira" << endl;
	}
	else {
		cout << "A proposicao e falsa" << endl;
	}
	}
	
	int main (void) {
		int a = 0;
		int b = 0;
		
		cout << "Digite dois numeros para saber se ambos sao pares" << endl;
		cin >> a;
		cin >> b;
		funcaogeral(a , b); 
	}
