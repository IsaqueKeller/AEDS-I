#include <iostream>
using namespace std; 

void funcaoidade (int idade) {
	if (idade >= 18) {
	cout << "Voce pode dirigir" << endl;
}
 else {
 	cout << "Voce nao pode dirigir" << endl;
 }
}

 int main(void) {
 	int a = 0;
 	
 	cout << "Digite a sua idade: " << endl;
 	cin >> a;
 	
 	funcaoidade(a);
 } 
