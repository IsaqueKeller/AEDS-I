#include <iostream>
using namespace std;

void sum_average (int quantity) {
	int i = 0;
	float number = 0;
	float sum = 0;
	do {
		cout << "Inform a number: " << endl;
		cin >> number;
	sum = number + sum;
	i++;
	} while (i < quantity);
	
	cout << "The sum is: " << sum << endl;
	cout << "The average is: " << sum/quantity << endl;
}

int main () {
	int quantity = 0;
	
	cout << "Inform the quantity of numbers: " << endl;
	cin >> quantity;
	sum_average (quantity);
}
